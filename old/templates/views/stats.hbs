    <section class="section bg-white" id="investments">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="title">Investment Table</h2>
                    <p class="title-alt">All investments up until the point of loading the page, including if a referral
                        or bonus was associated with the investment.
                    </p>
                </div>
            </div>
            <div class="row">
                <table id="investmentTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th><strong>Total Investments:</strong> <span
                                class="pull-right">{{summary.investmentCount}}</span></th>
                        <th><strong>Total Invested:</strong> <span class="pull-right">฿{{summary.investedBTC}}</span>
                        </th>
                        <th><strong>Total Bonuses:</strong> <span class="pull-right">฿{{summary.btcBonus}}</span></th>
                        <th><strong>Total RefBonuses:</strong> <span class="pull-right">฿{{summary.btcRefBonus}}</span>
                        </th>
                        <th><strong>Total Referred:</strong> <span class="pull-right">฿{{summary.totalReferred}}</span>
                        </th>
                    </tr>
                    <tr>
                        <th>Deposit Address</th>
                        <th>BTC Amount</th>
                        <th>BTC Bonus</th>
                        <th>Referral Bonus</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
					{{# each investments}}
                        <tr>
                            <td>{{btcAddress}}</td>
                            <td>{{btcAmount}}</td>
                            <td>{{btcBonus}}</td>
                            <td>{{btcRefBonus}}</td>
                            <td>{{goodDate}}</td>
                        </tr>
					{{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
