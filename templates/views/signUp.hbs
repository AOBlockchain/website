<section class="section">
	<div class="container">
		<h1>Sign up to support Rise.Vision</h1>
	</div>
	<div class="container">
		<div class="row">			<!--
				Flash messages allow you to display once-off status messages to users, e.g. form
				validation errors, success messages, etc
			-->
			{{#if messages}}
                <div id="flash-messages" class="container">
					{{#if messages.info}}
                        <div class="alert alert-info">
							{{{flashMessages messages.info}}}
                        </div>
					{{/if}}
					{{#if messages.success}}
                        <div class="alert alert-success">
							{{{flashMessages messages.success}}}
                        </div>
					{{/if}}
					{{#if messages.warning}}
                        <div class="alert alert-warning">
							{{{flashMessages messages.warning}}}
                        </div>
					{{/if}}
					{{#if messages.error}}
                        <div class="alert alert-danger">
							{{{flashMessages messages.error}}}
                        </div>
					{{/if}}
                </div>
			{{/if}}
            <!-- The content block should contain the body of your template's content-->
			{{{body}}}
        </div>

        <div class="col-sm-8 col-md-6">
				
				{{#if signedUp}}
					<h3>Thanks for signing up to be an affiliate.</h3>
					<button class="btn btn-default"><a href="/keystone/signin">Sign In</a></button>
				{{else}}
				<form method="post">
					<input type="hidden" name="action" value="contact">
					<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<label>Name</label>
						<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
						{{#if validationErrors.name}}<span class="help-block">{{validationErrors.name}}</span>{{/if}}
					</div>
					<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}">
						{{#if validationErrors.email}}<span class="help-block">{{validationErrors.email}}</span>{{/if}}
					</div>
					<div class="form-group">
						<label>Twitter</label>
						<input type="text" name="twitter" placeholder="(optional)" class="form-control" value="{{formData.twitter}}">
						{{#if validationErrors.twitter}}<span class="help-block">{{validationErrors.twitter}}</span>{{/if}}
					</div>
                    <div class="form-group {{#if validationErrors.bctUser}}has-error{{/if}}">
                        <label>Bitcoin Talk User</label>
                        <input type="text" name="bctUser" placeholder="(optional)" class="form-control" value="{{formData.bctUser}}">
						{{#if validationErrors.bctUser}}<span class="help-block">{{validationErrors.bctUser}}</span>{{/if}}
                    </div>
					<div class="row">
                        <div class="form-group col-md-6 {{#if validationErrors.password}}has-error{{/if}}">
                            <label>Password</label>
                            <input type="password" name="password" placeholder="(required)" class="form-control" value="{{formData.password}}">
							{{#if validationErrors.password}}<span
                                    class="help-block">{{validationErrors.password.message}}</span>{{/if}}
                        </div>
                        <div class="form-group col-md-6 {{#if validationErrors.password_confirm}}has-error{{/if}}">
                            <label>Confirm Password</label>
                            <input type="password" name="password_confirm" placeholder="(required)" class="form-control" value="{{formData.password_confirm}}">
                        </div>
					</div>
					
                    <div class="form-group {{#if validationErrors.referrer}}has-error{{/if}}">
                        <label>referrer</label>
                        <input type="text" name="referrer" placeholder="(automated)" class="form-control" value="{{formData.referrer}}">
						{{#if validationErrors.referrer}}<span class="help-block">{{validationErrors.referrer}}</span>{{/if}}
                    </div>
                    <div class="form-actions">
						<button type="submit" class="btn btn-primary">Send</button>
					</div>
				</form>
				{{/if}}
			</div>
		</div>
	</div>
</section>
