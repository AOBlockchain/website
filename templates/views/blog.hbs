<section class="g-bg-gray-light-v5 g-py-100">
      <div class="container text-center">
        <h2 class="h2 g-color-black g-font-weight-600">AO Blockchain News</h2>
      </div>
    </section>

	<div class="container g-py-50">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <!-- Blog Minimal Blocks -->
		  {{#each data.posts.results}}
          <article class="g-mb-100">
            <div class="g-mb-30">
              <span class="d-block g-color-gray-dark-v4 g-font-weight-700 g-font-size-12 text-uppercase mb-2">{{date publishing.date format='dddd MMMM do, YYYY'}}</span>
              <h2 class="h4 g-color-black g-font-weight-600 mb-3"><a class="u-link-v5 g-color-black g-color-primary--hover" href="{{postUrl slug}}">{{title}}</a></h2>
              <p class="g-color-gray-dark-v4 g-line-height-1_8">{{{content.brief}}}.</p>
              <a class="g-font-size-13" href="#!">Read more...</a>
            </div>

            <ul class="list-inline g-brd-y g-brd-gray-light-v3 g-font-size-13 g-py-13 mb-0">
              <li class="list-inline-item g-color-gray-dark-v4 mr-2">
                <span class="d-inline-block g-color-gray-dark-v4">
                    {{#if image}}<img class="g-g-width-20 g-height-20 rounded-circle mr-2" src="{{{cloudinaryUrl author.image width=100 height=100 crop='fill' gravity="faces"}}}" alt="{{author.name.full}} picture">{{/if}}
                    {{author.name.full}}
                  </span>
              </li><!--
              <li class="list-inline-item g-color-gray-dark-v4">
                <a class="d-inline-block g-color-gray-dark-v4 g-color-white--hover g-bg-gray-dark-v2--hover rounded g-transition-0_3 g-text-underline--none--hover g-px-15 g-py-5" href="#!">
                  <i class="align-middle g-font-size-default mr-1 icon-finance-206 u-line-icon-pro"></i>
                  10 Comments
                </a>
              </li>
              <li class="list-inline-item g-color-gray-dark-v4">
                <a class="d-inline-block g-color-gray-dark-v4 g-color-white--hover g-bg-gray-dark-v2--hover rounded g-transition-0_3 g-text-underline--none--hover g-px-15 g-py-5" href="#!">
                  <i class="align-middle g-font-size-default mr-1 icon-medical-022 u-line-icon-pro"></i>
                  57 Likes
                </a>
              </li>-->
            </ul>
          </article>
		  {{/each}}
          <!-- End Blog Minimal Blocks -->

          <!-- Pagination -->
		{{> pagination}}
          <!-- End Pagination -->
        </div>
      </div>
    </div>